digraph {
	"User Interface (UI)" [label="User Interface (UI)
User interacts with the chatbot, submitting health-related queries."]
	"Embedding Model (Query)" [label="Embedding Model (Query)
Embeds the user's query into a vector for similarity search."]
	"Vector Database (FAISS/Chroma)" [label="Vector Database (FAISS/Chroma)
Stores document embeddings for fast similarity search."]
	"Retriever Module" [label="Retriever Module
Uses query embedding to find relevant document embeddings."]
	"Embedding Model (Documents)" [label="Embedding Model (Documents)
Ingests documents and converts them into vector embeddings."]
	"LLM (Mistral7B)" [label="LLM (Mistral7B)
Generates a response based on retrieved document embeddings."]
	"Response Generation" [label="Response Generation
Combines retrieved data and LLM response into final answer."]
	"Feedback Loop" [label="Feedback Loop
Monitors system performance, hallucination rate, and accuracy."]
	"User Interface (UI)" -> "Embedding Model (Query)"
	"Embedding Model (Query)" -> "Retriever Module"
	"Retriever Module" -> "Vector Database (FAISS/Chroma)"
	"Vector Database (FAISS/Chroma)" -> "Retriever Module"
	"Retriever Module" -> "LLM (Mistral7B)"
	"LLM (Mistral7B)" -> "Response Generation"
	"Embedding Model (Documents)" -> "Vector Database (FAISS/Chroma)"
	"Response Generation" -> "User Interface (UI)"
	"Response Generation" -> "Feedback Loop"
}
